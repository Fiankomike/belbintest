<% @PageTitle = "SMS Received" %>

<!-- Header -->
	<div class="row">
		<div class="col-lg-12">
			<% receivedps = Electoraldatum.joins(:voteresults).select('distinct pscode').count %>
			<% totalps = Electoraldatum.select('distinct edpscode').count %>

			<h1 class="text-center">SMS Received <span class="badge"><%= "#{receivedps} out of #{totalps} polling stations" %></h1>
		</div>
	</div>


	<!-- Table -->
	
	<div class="row">
		<div class="table-responsive">
			<table class="table table-striped table-hover">
	  			<tr>
	  				<th width="2%">#</th>
		  			<th width="9%">From</th>
		  			<th width="9%">To</th>
		  			<th width="9%">PS Code</th>
		  			<th width="55%">Message</th>
		  			<th width="15%">Date/Time</th>
	  			</tr>

	  	<% idcounter = 0 %>
	  	<% @allsms.each do |smsvotes| %>
	  			<% idcounter += 1 %>
	  			<tr>
	  				<td width="2%"><%= idcounter %></td>
	  				<td width="9%"><%=smsvotes.msisdn %></td>
	  				<td width="9%"><%=smsvotes.recipients %></td>
	  				<td width="9%"><%=smsvotes.keyword %></td>
	  				<td width="55%"><%=smsvotes.smstext %></td>
	  				<td width="15%"><%=smsvotes.messagetimestamp %></td>
	  			</tr>

	  		<% end %>
	
			</table>
		</div>
	</div>