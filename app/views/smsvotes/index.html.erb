<div class="container-fluid">
<div class="row-fluid">
	<!-- Header -->
	<div class="row">
		<div class="col-lg-12">
			<h1 class="text-center">SMS Received</h1>
		</div>
	</div>

	<!-- Table -->
	
	<div class="row">
		<div class="table-responsive">
			<table class="table table-striped table-hover">
	  			<tr>
	  				<th>#</th>
	  				<th>From</th>
	  				<th>To</th>
	  				<th>PS Code</th>
	  				<th>Message</th>
	  				<th>Date/Time</th>
	  			</tr>

	  	<% @allsms.each do |smsvotes| %>

	  			<tr>
	  				<td><%= smsvotes.id %></td>
	  				<td><%=smsvotes.msisdn %></td>
	  				<td><%=smsvotes.recipients %></td>
	  				<td><%=smsvotes.keyword %></td>
	  				<td><%=smsvotes.smstext %></td>
	  				<td><%=smsvotes.messagetimestamp %></td>
	  			</tr>

	  		<% end %>
	
			</table>
		</div>
	</div>


<!-- ########  ACTUAL VOTE COUNT ###### -->
	<!-- Header -->
	<div class="row">
		<div class="col-lg-12">
			<h1 class="text-center">Vote Count</h1>
		</div>
	</div>

	<!-- Table -->
	
	<div class="row">
		<div class="table-responsive">
			<table class="table table-striped table-hover">
	  			<tr>
	  				<th>#</th>
	  				<th>PS Code</th>
	  				<th>Election Type</th>
	  				<th>Party / Candidate</th>
	  				<th>Vote Count</th>
	  			</tr>

	  	<% @allsmsvotes.each do |smsvotes| %>

	  			<tr>
	  				<td><%=smsvotes.id %></td>
	  				<td><%=smsvotes.pollingstationcode %></td>
	  				<td><%=smsvotes.typeofelection %></td>
	  				<td><%=smsvotes.partyorcandidate %></td>
	  				<td><%=smsvotes.votes %></td>
	  			</tr>

	  		<% end %>
	
			</table>
		</div>
	</div>


<!-- ########  Parliamentary VOTE COUNT ###### -->
	<!-- Header -->
	<div class="row">
		<div class="col-lg-6">
			<h1 class="text-center">Parliamentary Vote Count</h1>
		</div>
<!-- ########  Presidential VOTE COUNT ###### -->
	<!-- Header -->
		<div class="col-lg-6">
			<h1 class="text-center">Presidential Vote Count</h1>
		</div>
	</div>

	<!-- Parliamentary Table -->
	
	<div class="row">
		<div class="col-lg-6">
			<div class="table-responsive">
				<table class="table table-striped table-hover">
		  			<tr>
		  				<th>Party</th>
		  				<th>Total Votes </th>
		  			</tr>

		  	<% @pmttotal.each do |smsvotes| %>

		  			<tr>
		  				<td><%=smsvotes[0] %></td>
		  				<td><%=smsvotes[1] %></td>
		  			</tr>

		  		<% end %>
		
				</table>
			</div>
		</div>



	<!-- Presidential Table -->
	
		<div class="col-lg-6">
			<div class="table-responsive">
				<table class="table table-striped table-hover">
		  			<tr>
		  				<th>Party</th>
		  				<th>Total Votes </th>
		  			</tr>

		  	<% @pretotal.each do |smsvotes| %>

		  			<tr>
		  				<td><%=smsvotes[0] %></td>
		  				<td><%=smsvotes[1] %></td>
		  			</tr>

		  		<% end %>
		
				</table>
			</div>
		</div>

	</div>
</div>
</div>
