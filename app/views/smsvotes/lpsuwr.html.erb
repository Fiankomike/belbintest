<% @PageTitle = "Upper West Polling Stations" %>

<div class="container-fluid">
	<div class="row-fluid">
		<%= render('layouts/menu') %>
	</div>


	<div class="row-fluid">
		<div class="col-lg-10">
			<% totalps = Electoraldatum.select('distinct edpscode').where('region = "Upper West"').count %>

			<h1 align="center">List of Upper West Region Polling Stations <span class="badge"><%= "#{totalps} polling stations" %></span><h1> 
		</div>

		<div class="col-lg-2" style="margin-top: 15px"> 
            <!-- Large button group -->
            <%= render('layouts/listofpsmenu') %>
        </div>
	</div>


	<div class="row-fluid">
		<div class="col-lg-12">
		<div class="table-responsive">
				<table class="table table-striped table-bordered table-hover">
		  			<tr>
		  				<th>Region</th>
		  				<th>Constituency</th>
		  				<th>Electoral Area</th>
		  				<th>Polling Station Name </th>
		  				<th>PS Code </th>
		  			</tr>


		  			<% pmttotal = Electoraldatum.select('*').where('region = "Upper West"') %>

		  			<% m = "" %>
		  			<% pmttotal.each do |smsvotes| %>

			  			<tr>
			  				<td><strong><%= if m != smsvotes.region then smsvotes.region end %></strong></td>
			  				<% m = smsvotes.region %>
			  				<td><%=smsvotes.constituency %></td>
			  				<td><%=smsvotes.electoralarea %></td>
			  				<td><%=smsvotes.psname %></td>	
			  				<td><%=smsvotes.edpscode %></td>		
			  			</tr>

		  			<% end %>
						
				</table>
		</div>
		</div>
	</div>
</div>