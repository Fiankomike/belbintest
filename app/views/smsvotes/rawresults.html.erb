<div class="container-fluid">
	<div class="row-fluid">
		<%= render('layouts/menu') %>


	<!-- ########  ACTUAL VOTE COUNT ###### -->
		<!-- Header -->
		<div class="row">
			<div class="col-lg-12">
				<h1 class="text-center">Results Per Polling Station</h1>
			</div>
		</div>


		<!-- Table -->
		
		<div class="row">
			<div class="table-responsive">
				<table class="table table-striped table-hover">
		  			<tr>
		  				<th>#</th>
		  				<th>PS Code</th>
		  				<th>Election Type</th>
		  				<th>Candidate</th>
		  				<th>Party</th>
		  				<th>Vote Count</th>
		  			</tr>

		  	<% allsmsvotes = Voteresult.all.order('pscode') %>
		  	<% idcounter = 0 %>
		  	<% allsmsvotes.each do |smsvotes| %>
		  			<% idcounter += 1 %>
		  			<tr>
		  				<td><%=idcounter %></td>
		  				<td><%=smsvotes.pscode %></td>
		  				<td><%=smsvotes.typeofelection %></td>
		  				<td><%=smsvotes.candidate %></td>
		  				<td><%=smsvotes.party %></td>
		  				<td><%=smsvotes.votes %></td>
		  			</tr>

		  		<% end %>
		
				</table>
			</div>
		</div>
	</div>
</div>