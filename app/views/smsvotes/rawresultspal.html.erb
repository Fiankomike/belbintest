<% @PageTitle = "Polling Station Results (Parliamentary)" %>

<div class="container-fluid">
	<div class="row-fluid">
		<%= render('layouts/menu') %>

		<% receivedps = Electoraldatum.joins(:voteresults).select('distinct pscode').where('typeofelection = "PAL"').count %>
		<% totalps = Electoraldatum.select('distinct edpscode').count %>

	<!-- ########  ACTUAL VOTE COUNT ###### -->
		<!-- Header -->
		<div class="row">
			<div class="col-lg-10"><h1 align="center">Parliamentary Results Per Polling Station <span class="badge"><%= "#{receivedps} out of #{totalps} polling stations" %></span></h1> </div>
			<div class="col-lg-2" style="margin-top: 15px"> 

			<!-- Large button group -->
			<%= render('layouts/rawresultsmenu') %>
		</div>
		</div>


		<!-- Table -->
		
		<div class="row">
			<div class="table-responsive">
				<table class="table table-striped table-hover">
		  			<tr>
		  				<th>#</th>
		  				<th>PS Code</th>
		  				<th>PS Name</th>
		  				<th>Election Type</th>
		  				<th>Candidate</th>
		  				<th>Party</th>
		  				<th>Vote Count</th>
		  			</tr>

		  	<% allsmsvotes = Electoraldatum.joins(:voteresults).where('typeofelection = "PAL"').select('*').order('pscode, typeofelection') %>
		  	<% idcounter = 0 %>
		  	<% m = "" %>
		  	<% allsmsvotes.each do |smsvotes| %>
		  			<% idcounter += 1 %>
		  			<tr>
		  				<td><%=idcounter %></td>
		  				<td><strong><%= if m != smsvotes.pscode then smsvotes.pscode end %></strong></td>
		  				<% m = smsvotes.pscode %>
		  				<td><%=smsvotes.psname %></td>
		  				<td><%=smsvotes.typeofelection %></td>
		  				<td><%=smsvotes.candidate %></td>
		  				<td><%=smsvotes.party%></td>
		  				<td><%=smsvotes.votes %></td>
		  			</tr>

		  		<% end %>
		
				</table>
			</div>
		</div>
	</div>
</div>